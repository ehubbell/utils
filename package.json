{
  "name": "@ehubbell/utils",
  "version": "0.0.4",
  "description": "A collection of utilities used for various projects.",
  "author": "Eric Hubbell<eric@erichubbell.com>",
  "license": "ISC",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehubbell/utils.git"
  },
  "bugs": {
    "url": "https://github.com/ehubbell/utils/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "playbooks",
    "utils"
  ],
  "scripts": {
    "dev": "vite build --mode development --watch --minify false --sourcemap",
    "start": "vite build --mode development --minify false",
    "build": "vite build --mode production --minify true && npm run build:ts",
    "build:ts": "dts-bundle-generator --config dts.config.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier src",
    "format:fix": "prettier --write src",
    "clean": "npm run lint:fix && npm run format:fix",
    "commit": "scripts/commit.sh",
    "deploy": "scripts/deploy.sh",
    "git": "git push --tags",
    "test": "jest",
    "prepare": "husky"
  },
  "dependencies": {
    "accounting": "^0.4.1",
    "dayjs": "^1.11.13",
    "pluralize": "^8.0.0",
    "uniqid": "^5.4.0"
  },
  "devDependencies": {
    "@types/accounting": "^0.4.5",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eqeqeq-fix": "^1.0.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^4.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "prettier": "^3.3.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.8.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^4.5.0"
  },
  "exports": {
    ".": "./dist/index.cjs.js",
    "./arrays": "./dist/arrays.cjs.js",
    "./dates": "./dist/dates.cjs.js",
    "./errors": "./dist/errors.cjs.js",
    "./helpers": "./dist/helpers.cjs.js",
    "./logger": "./dist/logger.cjs.js",
    "./math": "./dist/math.cjs.js",
    "./regex": "./dist/regex.cjs.js",
    "./transforms": "./dist/transforms.cjs.js"
  }
}
